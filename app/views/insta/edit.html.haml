%div.card-header= raw "#{raw flash_info} #{raw flash_error}"
%div{:id=>"card-body"}
  %div.edit
    = semantic_form_for @model, :url => @form_url, :html => {:class => 'to-self' + (@form_class || '')} do |form|
      = render :partial => @template, :locals => { :form => form, :model => @model}

%div{:id=>"card-footer"}
  %ul.workflow
  %ul.buttons
    %li= link_to 'Cancel', @model, :class => 'to-self'
= render :partial => 'insta/card_settings'