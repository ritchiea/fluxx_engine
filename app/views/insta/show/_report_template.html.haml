.visualizations
  .title
    = @report_label
  .filter
    = @report_filter_text
  .chart
    = @report_data
  .summary
    = @report_summary
  .legend
    %table{:class => 'legend-table'}
      - @report_legend.each_index do |index|
        %tr
          - @report_legend[index].each do |item|
            - if index == 0
              %th
                =item
            - else
              %td
                =item
