%div.filter
  .report-title
    = @report.report_label
  = semantic_form_for ModelStub.generate_class_instance(ActiveRecord::Base), :url => {:controller => controller.controller_name, :action => 'show'}, :html => {:class => 'new-detail', :method => 'get', 'data-title' => @report.report_label} do |form|
    %input{:type=>'hidden', :name=>'id', :value => @report.report_id}

    = render :partial => @filter_template, :locals => { :form => form} if @filter_template
    = form.commit_button 'View Report'
    = form.submit_tag 'View Document'