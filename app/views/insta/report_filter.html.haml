%div.filter
  = semantic_form_for ModelStub.generate_class_instance(ActiveRecord::Base), :url => {:controller => controller.controller_name, :action => 'show'}, :html => {:class => '', :method => 'get'} do |form|
    %input{:type=>'hidden', :name=>'id', :value => @report.report_id}
    
    = render :partial => @filter_template, :locals => { :form => form} if @filter_template
    = form.commit_button 'View Report'