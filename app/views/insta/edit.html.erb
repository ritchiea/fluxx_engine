<div id="card-header"><%= flash_info %><%= flash_error %></div>
<div id="card-body">
  <div class="edit">
	<%= semantic_form_for @model, :url => @form_url, :html => {:class => 'to-self' + (@form_class || '')} do |form| %>
    <%= render :partial => @template, :locals => { :form => form, :model => @model} %>
	<% end %>

</div>

</div>

<div id="card-footer">
<%= link_to 'Cancel', @model, :class => 'to-self btn' %>
<%- unless @not_editable -%>
<script>
  $('body').one('fluxxCardLoadContent',function(e, $area){
    var $submit = $('.edit form input[type="submit"]', $area);
    $('.card-footer,.modal-footer', $area).append(
      $('<a></a>').attr('href','#').text($submit.val()).click(function(e){
        e.preventDefault();
        e.stopImmediatePropagation();
        $submit.parents('form:first').trigger('submit');
      }).addClass('fluxx-card-link-to-workflow btn green')
    );
    $submit.hide();
  });
</script>
<%- end -%>
</div>